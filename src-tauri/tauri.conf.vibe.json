{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Misfit Vibe Installer",
  "version": "1.0.3",
  "identifier": "com.misfit.vibe",
  "build": {
    "frontendDist": "../installer-ui/dist",
    "beforeDevCommand": "npm --prefix ./installer-ui run dev",
    "beforeBuildCommand": ""
  },
  "app": {
    "windows": [
      {
        "title": "Misfit Vibe Installer",
        "width": 800,
        "height": 600,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": "default-src 'self'; img-src 'self' asset: data: blob:; style-src 'self' 'unsafe-inline'; font-src 'self' asset: data:; script-src 'self'; connect-src 'self' ipc: http://ipc.localhost"
    }
  },
  "bundle": {
    "active": true,
    "resources": [
      "../manifests",
      "../payloads"
    ],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}